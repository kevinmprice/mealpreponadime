---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout 
  title={`${post.data.title} ‚Äî MealPrepOnADime`}
  description={post.data.excerpt}
  image={post.data.heroImage}
>
  <article class="blog-post">
    <div class="container">
      <header class="post-header">
        <span class="post-category">{post.data.category}</span>
        <h1>{post.data.title}</h1>
        <p class="post-excerpt">{post.data.excerpt}</p>
        
        {(post.data.prepTime || post.data.cookTime || post.data.servings || post.data.costPerServing) && (
          <div class="recipe-meta">
            {post.data.prepTime && (
              <div class="recipe-meta-item">
                <span>‚è±Ô∏è Prep:</span> {post.data.prepTime}
              </div>
            )}
            {post.data.cookTime && (
              <div class="recipe-meta-item">
                <span>üî• Cook:</span> {post.data.cookTime}
              </div>
            )}
            {post.data.servings && (
              <div class="recipe-meta-item">
                <span>üçΩÔ∏è Servings:</span> {post.data.servings}
              </div>
            )}
            {post.data.costPerServing && (
              <div class="recipe-meta-item">
                <span>üí∞ Cost:</span> ${post.data.costPerServing}/serving
              </div>
            )}
            {post.data.calories && (
              <div class="recipe-meta-item">
                <span>üî• Calories:</span> {post.data.calories}
              </div>
            )}
          </div>
        )}
      </header>
      
      {post.data.heroImage && (
        <img 
          src={post.data.heroImage} 
          alt={post.data.heroAlt || post.data.title}
          class="hero-image"
        />
      )}
      
      <div class="post-content content">
        <Content />
      </div>
      
      <div class="post-actions">
        <button class="print-button" onclick="window.print()">
          üñ®Ô∏è Print Recipe
        </button>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: 2rem 0;
  }
  
  .post-header {
    text-align: center;
    max-width: 720px;
    margin: 0 auto 2rem;
  }
  
  .post-category {
    display: inline-block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .post-excerpt {
    font-size: 1.125rem;
    color: var(--color-text-light);
  }
  
  .hero-image {
    width: 100%;
    max-height: 500px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  
  .post-content {
    font-size: 1.0625rem;
    line-height: 1.8;
  }
  
  .post-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }
  
  .post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .post-content :global(p) {
    margin-bottom: 1.25rem;
  }
  
  .post-content :global(ul), .post-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  
  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-light);
  }
  
  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  
  .post-content :global(th), .post-content :global(td) {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 1px solid var(--color-border);
  }
  
  .post-content :global(th) {
    font-weight: 600;
    background: var(--color-bg-alt);
  }
  
  .post-actions {
    max-width: var(--content-width);
    margin: 3rem auto 0;
    text-align: center;
  }
  
  @media (max-width: 768px) {
    .post-header h1 { font-size: 2rem; }
  }
</style>
